{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "Electron application with Claude integration",
  "main": "dist/main/index.js",
  "bin": {
    "claude-code": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "cross-env NODE_ENV=development npm run start",
    "electron": "electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:portable": "npm run build && electron-builder --win portable",
    "test": "playwright test",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "claude",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "electron-builder": "^24.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.83",
    "@anthropic-ai/sdk": "^0.24.0",
    "@playwright/test": "^1.54.2",
    "commander": "^9.5.0",
    "dotenv": "^17.2.1",
    "playwright": "^1.45.0",
    "playwright-core": "^1.45.0",
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.example.electron-app",
    "productName": "Electron App",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.exe"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
